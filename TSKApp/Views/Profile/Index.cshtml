@model TSKApp.PL.Models.UserViewModel
 
<div style="margin-top:50px">
    
<form asp-controller="Profile" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="d-flex justify-content-center">
        <input type="text" hidden asp-for="Id">
        @if (Model.Avatar != null)
        {
            <img style='width:120px; height:120px; border-radius: 80px; margin-right: 20px' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Avatar))"/>
        }
        else
        {
            <p>Avatar not found.</p>
        }
        <div class="card">
            <div class="card-header">
                <div class="row pt-3">
                    <div class="col-6">
                        <h2 style="color:#6310CB;">Profile Edit</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex" style="margin-bottom: 25px">
                    <div style="margin-right: 15px">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control"/>
                        <span asp-validation-for="FirstName"></span>
                    </div>
                    <div>
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control"/>
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center" style="margin-top: 30px">
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="inputGroupFile01">Upload</label>
                        <input type="file" class="form-control" name="avatar" id="inputGroupFile01">
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center" style="margin-top: 15px">
                    <p>
                        <input class="btn btn-success" style="width: 150px" type="submit" value="Edit"/>
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>
</div>

